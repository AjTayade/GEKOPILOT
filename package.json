{
  "name": "geckopilot",
  "displayName": "GeckoPilot",
  "description": "Automated Development Environment Setup",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0" 
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:geckopilot.startSetupWizard",
    "onCommand:geckopilot.runFromFile",
    "onCommand:geckopilot.checkFromFile"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "geckopilot.startSetupWizard",
        "title": "GeckoPilot: Configure Environment Setup Wizard"
      },
      {
        "command": "geckopilot.runFromFile",
        "title": "GeckoPilot: Run Setup from .devsetup.json"
      },
      {
        "command": "geckopilot.checkFromFile",
        "title": "GeckoPilot: Check Requirements from .devsetup.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./ --outDir dist", 
    "watch:compile": "tsc -p ./ --outDir dist --watch",
    "watch:esbuild": "node esbuild.js --watch",
    "watch": "npm-run-all --parallel watch:compile watch:esbuild",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src", 
    "test": "vscode-test" 
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6", 
    "@types/node": "^20.11.24", 
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.80.0", 
    "@typescript-eslint/eslint-plugin": "^7.1.0", 
    "@typescript-eslint/parser": "^7.1.0", 
    "@vscode/test-cli": "^0.0.6", 
    "@vscode/test-electron": "^2.3.9", 
    "esbuild": "^0.20.1", 
    "eslint": "^8.57.0", 
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3" 
  },
  "dependencies": {
    "semver": "^7.6.0" 
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs" 
}